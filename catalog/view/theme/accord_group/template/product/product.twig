                          <div class="splide main-product__main-slider">
                            <div class="main-product__label">Новинка</div>
                            <div class="splide__track">
                              <ul class="splide__list">
                                {% if thumb %}
                                  <li class="splide__slide">
                                    <a href="{{ popup }}" title="{{ heading_title }}">
                                      <img class="ibg ibg--contain" src="{{ thumb }}" alt="{{ heading_title }}" />
                                    </a>
                                  </li>
                                {% endif %}
                                {% for image in images %}
                                  <li class="splide__slide">
                                    <a href="{{ image.popup }}" title="{{ heading_title }}">
                                      <img class="ibg ibg--contain" src="{{ image.thumb }}" alt="{{ heading_title }}" />
                                    </a>
                                  </li>
                                {% endfor %}
                              </ul>
                            </div>
                            <div class="splide__arrows">
                              <button class="splide__arrow splide__arrow--prev _icon-ch-left"></button>
                              <div class="splide__pagination"></div>
                              <button class="splide__arrow splide__arrow--next _icon-ch-right"></button>
                            </div>
                          </div>
                    
                          <!-- Thumbnail Slider -->
                          <div class="splide main-product__thumbnail-slider">
                            <div class="splide__track">
                              <ul class="splide__list">
                                <li class="splide__slide">
                                  <img class="ibg ibg--contain" src="{{ thumb }}" alt="{{ heading_title }}" />
                                </li>
                                {% for image in images %}
                                  <li class="splide__slide">
                                    <img class="ibg ibg--contain" src="{{ image.thumb }}" alt="{{ heading_title }}" />
                                  </li>
                                {% endfor %}
                              </ul>
                            </div>
                          </div>
                        {% else %}
                          <!-- Если только одно изображение, просто выводим его без Splide -->
                          <div class="main-product__single-image">
                            <a href="{{ popup }}" title="{{ heading_title }}">
                              <img class="ibg ibg--contain" src="{{ thumb }}" alt="{{ heading_title }}" />
                            </a>
                          </div>
                        {% endif %}
