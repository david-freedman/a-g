          <button type="button" class="product__tab-title _icon-file">Опис</button>
          <button type="button" class="product__tab-title  _icon-list">Характеристики</button>
          {% if video_prod %}<button type="button" class="product__tab-title _icon-camera">Відео-огляд</button>{% endif %}
