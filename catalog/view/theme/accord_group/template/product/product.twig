                    <div class="main-product__order order-p-block">
                      <!-- Product Title -->
                      <h2 class="order-p-block__title">{{ heading_title }}</h2>
                    
                      <div class="order-p-block__info">
                        <div class="order-p-block__label">
                          {% if manufacturer %}
                              {{ text_manufacturer }}
                              <a href="{{ manufacturers }}">
                                  <span>{{ manufacturer }}</span>
                              </a>
                              {% if manufacturer_image %}
                                  <img src="{{ manufacturer_image }}" alt="{{ manufacturer }}-logo" class="order-p-block__logo">
                              {% endif %}
                          {% endif %}


                        </div>
                    
                        <!-- Product SKU (Model) -->
                        <div class="order-p-block__label">
                          Артикул: <span>{{ model }}</span>
                        </div>
                    
                        <!-- Action Buttons -->
