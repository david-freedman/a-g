                          <button class="order-p-block__icon-btn order-p-block__icon-btn--fav _icon-heart"></button>
                          <button class="order-p-block__icon-btn _icon-libra"></button>
                          <button class="order-p-block__icon-btn _icon-bag"></button>
                        </div>
                      </div>
                    
                      <!-- Colors Selector (Example Placeholder) -->
                      {% if options %}
