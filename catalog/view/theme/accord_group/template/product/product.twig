        <a href="#" class="breadcrumbs__link _icon-house"></a>
        <ul class="breadcrumbs__list">
          {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumbs__item">
              <a class="breadcrumbs__link" href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a>
          </li>
          {% endfor %}
      </ul>      
      </div>
    </div>

