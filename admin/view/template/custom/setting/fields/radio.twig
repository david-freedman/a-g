<div{{ popover }} class="btn-group" data-toggle="buttons" id="input-custom-setting-{{ id }}">
    {% for v in values %}
        <label class="btn btn-default{{ value == v.value ? ' active': '' }}">
            <input name="custom_setting{{ name }}" type="radio" value="{{ v.value }}" {{ value == v.value ? ' checked="checked"': '' }}/>
            <span class="on-off">{{ v.title }}</span>
        </label>
    {% endfor %}
</div>
{% if error %}
    <div class="text-danger">{{ error }}</div>
{% endif %}
